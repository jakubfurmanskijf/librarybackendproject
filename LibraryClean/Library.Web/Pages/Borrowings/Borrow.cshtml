@page
@model Library.Web.Pages.Borrowings.BorrowModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]

<h2>Borrow a book</h2>

<form method="post">
    <div><label>Member Id</label> <input asp-for="MemberId" type="number" /></div>
    <div><label>Book Id</label>   <input asp-for="BookId" type="number" /></div>
    <div><label>Days</label>      <input asp-for="Days" type="number" value="14" /></div>
    <button type="submit">Borrow</button>
    <a asp-page="/Borrowings/Index">Cancel</a>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}
@if (!string.IsNullOrEmpty(Model.Error))
{
    <p style="color:red">@Model.Error</p>
}
