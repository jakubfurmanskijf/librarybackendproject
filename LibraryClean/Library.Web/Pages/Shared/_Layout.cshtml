@*
  Razor Pages layout
  - Brand: "Library"
  - Removed Privacy from navbar & footer
  - Left: Home, SOAP, Books (+ admin: Borrowings, Members)
  - Right: Login/Logout (auto)
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Library.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-page="/Index">Library</a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#topNav"
                        aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="topNav" class="collapse navbar-collapse">
                    <!-- Left side -->
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Soap/Check">SOAP</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Books/Index">Books</a>
                        </li>

                        @* Admin-only *@
                        @if (User?.IsInRole("Admin") ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Borrowings/Index">Borrowings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Members/Index">Members</a>
                            </li>
                        }
                    </ul>

                    <!-- Right side -->
                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="navbar-text small text-muted">
                                    Hello, @User!.Identity!.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @(DateTime.UtcNow.Year) - Library
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
